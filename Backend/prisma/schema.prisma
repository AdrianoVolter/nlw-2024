generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip{
  id String @id @default(cuid())
  destination String
  start_at DateTime
  end_at DateTime
  is_confirmed Boolean @default(false)
  created_at DateTime @default(now())
  @@map("trips")
}